package components

templ SearchForm(query string) {
	<form class="search-form" hx-post="/search" hx-target="#results" hx-swap="outerHTML">
		<input 
			type="text" 
			name="q" 
			class="search-input"
			placeholder="Search YouTube..." 
			value={ query } 
			required
			autocomplete="off"
		/>
		<button type="submit" class="search-button">Search</button>
	</form>
}
